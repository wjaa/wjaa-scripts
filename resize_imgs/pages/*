<html>

	<head>
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
		<style>
			span{
				float:left;
			}
		</style>	
	</head>
	<body>

		<form action="/reduzirImagem" onsubmit="return validate()">
			Path:&nbsp;<input id="path_origem" type="text" name="path_origem"/>
			<br>
			Path Destino:&nbsp;<input id="path_destino" type="text" name="path_destino" />
			<br>
			Largura:&nbsp;<input type="text" id="largura" name="largura"/>
			<br>
			Altura:&nbsp;<input type="text" id="altura" name="altura"/>
			<br>
			<input type="submit" value="Iniciar" />
		</form>
		
	</body>
</html>
<script>

	
	function validate(){
		if ( jQuery.trim($('#path_origem').val()) == '' ){
			alert('Campo Path é obrigatório!');
			$('#path_origem').focus();
			return false;
		}
		
		if ( jQuery.trim($('#path_destino').val()) == '' ){
			$('#path_destino').focus();
			alert('Campo Path Destino é obrigatorio!');
			return false;
		}

		
		if ( jQuery.isNumeric($('#largura').val()) == '' ){
			$("#largura").focus();
			alert('Campo largura precisa ser um número!');
			return false;
		}
		
	
		if ( jQuery.isNumeric($('#altura').val()) == '' ){
			$("#altura").focus();
			alert('Campo altura precisa ser um número!');
			return false;
		}

	}

	
     


</script>
